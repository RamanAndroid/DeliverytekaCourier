<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.instruction.InstructionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_margin_xlarge"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Начало смены"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarge"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Для начала смены перейдите в главное меню"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_normal"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_xlarge"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Заказы"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarge"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Заказы
Для того чтобы принять заказы перейдите в меню
заказов и нажмите кнопку “принять”.
После откроется полное описание заказа, Вы можете
позвонить клиенту, построить маршрут и просмотреть
содержимое заказа.
Как только возьмете содержимое заказа, нажмите
соответсующую кнопку. Прибыли к клиенту - так же
нажимаете кнопку и так далее."
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_normal"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_xlarge"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Профиль"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarge"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Профиль
Вся информация о Вас, а так же Ваша небольшая
статистика отображается в профиле."
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_normal"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_margin_xlarge"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Звонок администратору"
            android:textColor="@color/black"
            android:textSize="@dimen/text_xlarge"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вы можете позвонить администратору нажав на кнопку “звонок администратору” в главном меню приложения, для того, чтобы задать вопрос либо же закончить смену досрочну ввиду каких-либо обстоятельств."
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_normal"
            app:layout_constraintEnd_toStartOf="@+id/btn_change_profile"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</ScrollView>