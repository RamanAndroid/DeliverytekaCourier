<resources>
    <!-- Base application theme. -->
    <style name="Theme.DeliverytekaCourier" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorError">@color/color_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:statusBarColor">@color/color_error</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/LoginTextField</item>
        <item name="android:scrollViewStyle">@style/AppScrollView</item>
        <item name="android:textViewStyle">@style/TextNormal</item>
        <item name="snackbarStyle">@style/AppSnackbar</item>
        <item name="snackbarTextViewStyle">@style/AppSnackbarTextView</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/Theme.MaterialComponents.Light.Dialog.Alert
        </item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTextAppearance.Tab" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTabLayout" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="android:textAllCaps">true</item>
        <item name="tabTextAppearance">@style/AppTextAppearance.Tab</item>
        <item name="tabPaddingStart">@dimen/padding_margin_xlarge</item>
        <item name="tabPaddingEnd">@dimen/padding_margin_xlarge</item>
        <item name="elevation">6dp</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="iconTint">@color/button_text_color</item>
        <item name="rippleColor">@color/button_light_ripple_color</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeWidth">0.8dp</item>
        <item name="strokeColor">@color/light_gray</item>
    </style>

    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textViewStyle">@style/LoginTextView</item>
        <item name="textInputStyle">@style/LoginTextField</item>
        <item name="materialButtonStyle">@style/LoginButton</item>
        <item name="android:statusBarColor">@color/color_error</item>
    </style>

    <style name="AppScrollView" parent="android:Widget.ScrollView">
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="LoginTextField" parent="AppTextField">
        <item name="boxStrokeColor">@color/edit_text_box_stroke_selector_white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>


    <style name="LoginTextView">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RoundButton" parent="@style/Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="LongButton" parent="RoundButton">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/button_text_color</item>
        <item name="cornerRadius">0dp</item>
        <item name="textAllCaps">true</item>
    </style>


    <style name="LoginButton" parent="AppButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="rippleColor">@color/login_button_ripple_color</item>>
        <item name="android:letterSpacing">.01</item>
        <item name="strokeWidth">0.8dp</item>
        <item name="strokeColor">@color/light_gray</item>
    </style>

    <style name="AppSnackbar" parent="Widget.MaterialComponents.Snackbar.FullWidth" />

    <style name="AppSnackbarTextView">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="paddingStart">@dimen/padding_margin_xxxlarge</item>
        <item name="paddingEnd">@dimen/padding_margin_xxxlarge</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextNormal">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
        <item name="android:backgroundTint">@color/color_primary</item>
    </style>

    <style name="AppBottomNav" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="CartProductImageCardView">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">@dimen/padding_margin_xlarge</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="endIconTint">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>


    <style name="AlertDialogTheme" parent="MaterialAlertDialog.MaterialComponents">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/color_error</item>
        <item name="android:windowBackground">@drawable/rounded_dialog</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/OutlinedButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/OutlinedButton</item>
    </style>

    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>
</resources>